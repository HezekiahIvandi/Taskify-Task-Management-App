<div class="dashboard-container">
  <div class="header-morning">
    <h1>Good Morning Admin!üëãüèº</h1>
    <div class="search-container">
      <input type="text" placeholder="Search here..." class="search-input" />
      <i class="fa-solid fa-search search-icon"></i>
    </div>
  </div>
  <div class="simple-stat-con">
    <div class="simple-stat">
      <div class="stat-icon">
        <img src="assets/users-icon.png" alt="users's icon" />
      </div>
      <div class="stat-labels">
        <p>Taskify Users</p>
        <h2>12</h2>
        <div>
          <span><img src="assets/arrow-up.png" alt="" /></span>
          <span class="percentage"> + </span>
          <span class="percentage" id="users-growth"> 25 </span>
          <span class="percentage"> % </span>
          <span class="time-interval">this month</span>
        </div>
      </div>
    </div>
    <div class="simple-stat">
      <div class="stat-icon">
        <img src="assets/tasks-icon.png" alt="users's icon" />
      </div>
      <div class="stat-labels">
        <p>Total Tasks</p>
        <h2>23</h2>
        <div>
          <span><img src="assets/arrow-up.png" alt="" /></span>
          <span class="percentage"> + </span>
          <span class="percentage" id="users-growth"> 25 </span>
          <span class="percentage"> % </span>
          <span class="time-interval">this month</span>
        </div>
      </div>
    </div>
    <div class="simple-stat">
      <div class="stat-icon">
        <img src="assets/chats-icon.png" alt="users's icon" />
      </div>
      <div class="stat-labels">
        <p>Total Chats</p>
        <h2>47</h2>
        <div>
          <span><img src="assets/arrow-up.png" alt="" /></span>
          <span class="percentage"> + </span>
          <span class="percentage" id="users-growth"> 25 </span>
          <span class="percentage"> % </span>
          <span class="time-interval">this month</span>
        </div>
      </div>
    </div>
  </div>
  <div class="users-pagination">
    <div class="pagination-header">
      <h3>Taskify Users</h3>
      <div class="pagination-header-right">
        <div class="search-container">
          <input
            type="text"
            placeholder="Search here..."
            class="search-input"
          />
          <i class="fa-solid fa-search search-icon"></i>
        </div>
        <div class="dropdown">
          <select class="dropdown-content">
            <option id="sort-by-newest">
              <span>Sort by:</span>
              <span style="color: blue" class="sort-type">Newest</span>
            </option>
            <option id="sort-by-name">
              <span>Sort by:</span>
              <span class="sort-type">Newest</span>
            </option>
          </select>
        </div>
      </div>
    </div>
    <div class="columns">
      <p>Email</p>
      <p>Username</p>
      <p>Task</p>
      <p>Contacts</p>
      <p>Delete User?</p>
    </div>
  </div>
  <div class="users-pagination-2">
    <div class="users-container">
      <% users.forEach(user => { %>
      <div class="user">
        <p class="email"><%= user.email %></p>
        <p class="username"><%= user.name %></p>
        <p class="see-task" id="<%=user._id %>">See Task</p>
        <p class="see-contacts" id="<%=user._id %>">See Contacts</p>
        <button class="Delete" id="<%=user._id %>">Delete</button>
      </div>
      <% }) %>
    </div>
    <div class="pagination-nav">
      <p>Showing data 1 to 4 of 3 entries</p>
      <div class="nav">
        <button class="prev-btn"><</button>
        <button class="page-btn active">1</button>

        <button class="next-btn">></button>
      </div>
    </div>
    <div></div>
  </div>
</div>
